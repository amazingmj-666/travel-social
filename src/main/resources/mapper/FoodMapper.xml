<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wmj.design.travelsocial.dao.FoodMapper">
    <select id="selectFoodByRandom" resultType="com.wmj.design.travelsocial.domain.information.Food">
        SELECT * FROM food ORDER BY RAND() LIMIT 3
    </select>
    <select id="selectFoodListByCity" parameterType="String"
            resultType="com.wmj.design.travelsocial.domain.information.Food">
        SELECT * FROM food WHERE city=#{city}
    </select>
    <select id="selectFoodListByName" parameterType="String"
            resultType="com.wmj.design.travelsocial.domain.information.Food">
        SELECT * FROM food WHERE  name LIKE "%"#{name}"%"
    </select>
    <select id="selectFoodById" parameterType="int"
            resultType="com.wmj.design.travelsocial.domain.information.Food">
        SELECT * FROM food WHERE id=#{id}
    </select>
</mapper>
